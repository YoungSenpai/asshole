style "curve"
{
   engine "pixmap"
   {
      image
      {
         function	= FLAT_BOX
	 recolorable	= TRUE
	 detail		= "curve_bg"
	file		= "Others/null-2.png"
	 border		= { 2, 2, 2, 2 }
	 stretch	= FALSE
      }
   }
}
