style "range" = "theme-default"
{	
  engine "pixmap"
  {
# trough
    image
    {
      function		= BOX
      recolorable	= TRUE
      detail		= "trough"
      file		= "Range/trough-horizontal.png"
      border		= { 10, 10, 1, 1 }
      stretch		= TRUE
      orientation	= HORIZONTAL
    }
    image
    {
      function		= BOX
      recolorable	= TRUE
      detail		= "trough"
      file		= "Range/trough-vertical.png"
      border		= { 1, 1, 3, 3 }
      stretch		= TRUE
      orientation	= VERTICAL
    }
